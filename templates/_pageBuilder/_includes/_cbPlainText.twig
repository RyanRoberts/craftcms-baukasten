{#
  Content Builder Modules
  =======================
#}

{% switch data.type %}
    {# Accordion Modul #}
    {# TODO: Accordion Simple Headline Text #}
{% case 'accordion' %}
    {% include '_organisms/accordion/_template.twig' with {
        props: {
            modifiers: [
                'cb'
            ],
            items: data.children ?? null
        }
    } only %}

    {# Content Section Modul #}
{% case 'bkSection' %}
    {% include '_organisms/section/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.paddingVertical ?? null,
                data.width ?? null,
                data.background ?? null
            ],
            closetags: false
        }
    } only %}

    {# Snippet Modul #}
{% case 'code' %}
    {% include '_atoms/code/_template.twig' with {
        props: {
            modifiers: [
                'cb',
            ],
            snippet: data.snippet ?? null,
            language: data.language ?? null
        }
    } only %}

    {# Definiton List Modul #}
{% case 'definitionList' %}
    {% include '_molecules/definitionList/_template.twig' with {
        props: {
            modifiers: [
                'cb',
            ],
            items: data.definitionList ?? null
        }
    } only %}

    {# Embed Modul #}
{% case 'embed' %}
    {% include '_atoms/embed/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.position ?? null,
                data.width ?? null
            ],
            code: data.code ?? null
        }
    } only %}

    {# Headline Modul #}
{% case 'headline' %}
    {% include '_atoms/headline/_template.twig' with {
        props: {
            modifiers: [
                'cb',
            ],
            text: data.headline ?? null,
            size: data.size ?? null
        }
    } only %}

    {# Image Cover Modul #}
{% case 'imageCover' %}
    {% include '_organisms/imageCover/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.color ?? null,
                data.position ?? null,
                data.alignment ?? null
            ],
            image: data.image.one() ?? null,
            ratio: data.ratio ?? null,
            text: data.text ?? null
        }
    } only %}

    {# Image Gallery Modul #}
{% case 'imageGallery' %}
    {% include '_organisms/imageGallery/_template.twig' with {
        props: {
            modifiers: [
                'cb'
            ],
            customClasses: ['test'],
            images: data.images.all() ?? null,
            ratio: data.ratio ?? null,
        }
    } only %}

    {# Image Grid Modul #}
{% case 'imageGrid' %}
    {% include '_organisms/imageGrid/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.columns ?? null
            ],
            images: data.images.all() ?? null,
            ratio: data.ratio ?? null,
            caption: data.caption ?? null,
        }
    } only %}

    {# Image Single Modul #}
{% case 'imageSingle' %}
    {% set image = data.image.one() %}
    {% include '_organisms/imageSingle/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.alignment ?? null,
                data.width ?? null
            ],
            image: image ?? null,
            ratio: data.ratio ?? null,
            caption: data.caption ?? null,
            captionHeadline: image.imageTitle ?? null,
            captionText: image.imageCaption ?? null,
            captionSource: image.imageSource ?? null,
            captionSourceUrl: image.imageSourceUrl ?? null
        }
    } only %}

    {# Image Slider Modul #}
{% case 'slider' %}
    {% include '../_organisms/slider' with {
        props: {
            modifiers: [
                'cb',
            ],
            images: data.images.all() ?? null,
            ratio: data.ratio ?? null,
        }
    } only %}

    {# Quote Modul #}
{% case 'quote' %}
    {% include '_molecules/quote/_template.twig' with {
        props: {
            modifiers: [
                'cb',
            ],
            quote: data.quote ?? null,
            source: data.source ?? null,
            sourceUrl: data.sourceUrl ?? null
        }
    } only %}

    {# Rich Text Modul #}
{% case 'richText' %}
    {% include '_atoms/richText/_template.twig' with {
        props: {
            modifiers: [
                'cb',
            ],
            text: data.richText ?? null
        }
    } only %}

    {# Separator Modul #}
{% case 'divider' %}
    {% include '_atoms/divider/_template.twig' with {
        props: {
            modifiers: [
                'cb',
                data.settingsDivider.style ?? null,
                data.settingsDivider.marginVertical ?? null
            ]
        }
    } only %}

{% endswitch %}



