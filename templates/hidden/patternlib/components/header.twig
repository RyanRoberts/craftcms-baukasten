{% extends "_layouts/layout-patternlib.twig" %}

{% block blockAppContent %}
  {% cache using key craft.app.request.pathInfo %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Header / Logo Small{% endblock %}
      {% block content %}
        {% include '_components/header/header.twig' with {
          data: {
            logoSize: 'sm'
          }
        } only %}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
