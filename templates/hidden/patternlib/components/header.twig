      {% block content %}
        {% include '_components/header/header.twig' with {
          data: {
            logoSize: 'md'
          }
        } only %}
      {% endblock %}
    {% endembed %}

    {# >>> Render variant #}
    {% embed 'hidden/patternlib/_partials/_embedComp.twig' %}
      {% block label %}Header / Logo Large{% endblock %}
      {% block content %}
        {% include '_components/header/header.twig' with {
          data: {
            logoSize: 'lg'
          }
        } only %}
      {% endblock %}
    {% endembed %}

  {% endcache %}
{% endblock %}


