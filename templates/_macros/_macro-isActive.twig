{#
{% import '_macros/_macro-isActive.twig' as macroIsActive  %}
{{ macroIsActive.isActive('news', -1, 'activeClass') }}
#}

{%- macro isActive(segments, position, prefix, activeClass) -%}
  {%- set segments = segments | default(null) -%}
  {%- set position = position | default(-1) -%}
  {%- set prefix = prefix | default(null) -%}
  {%- set activeClass = activeClass | default('is-active') -%}

  {%- if segments is iterable and craft.app.request.getSegment(position) in segments -%}
    {{- prefix ? prefix ~ activeClass : activeClass -}}
  {%- elseif craft.app.request.getSegment(position) == segments -%}
    {{- prefix ? prefix ~ activeClass : activeClass -}}
  {%- endif -%}
{%- endmacro -%}
