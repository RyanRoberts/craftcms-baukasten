{#
  {% import '_macros/_macro-componentSettings.html' as macroComponentSettings  %}
  {{ macroComponentSettings.componentSettings(props.settings) }}
#}
{% macro componentSettings(props) %}
  {# Component Name #}
  {% if props.name %}data-component="{{ props.name }}"
    {# JS Class #}
    {% if props.js ??? null %}
      data-component-js="{{ props.name|replace({ (props.name | slice(0,2)) : 'js-' }) }}"
    {% endif %}
  {% endif %}

  {# Set data attributes #}
  {% if props.data ??? null %}
    {% for key, value in props.data %}  {{ key }}="{{ value }}" {% endfor %}
  {% endif %}
{% endmacro %}
