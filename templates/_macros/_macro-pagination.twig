{#
  Pagination
  ==========
  Powered by Kittn Generator: http://kittn.de/
  Generate navigation buttons for paginations
  It use the Pagination Module, include before the Loop `{% paginate entries as pageInfo, pageEntries %}`

  @param {object}  pages                 - Pagination Object
  @param {object}  craft                 - Craft Request Object
  @param {object}  options               - Array of options
  @param {string}  props.cn     - Classname (default: 'o-pagination')
  @param {string}  props.searchquery   - To pass search words from Searchfields (default: false)
  @param {number}  props.pagenuber     - How many Pagebuttons are to be displayed. At 0, the display of the page buttons is omitted
  @param {string}  props.firstPageSign - HTML Sign for FirstPage
  @param {string}  props.lastPageSign  - HTML Sign for LastPage
  @param {string}  props.prevSign      - HTML Sign for Prev
  @param {string}  props.nextSign      - HTML Sign for Next
  @param {string}  props.firstPageText - Titletext for Firstpage
  @param {string}  props.lastPageText  - Titletext for Lastpage
  @param {string}  props.prevText      - Titletext for Prev
  @param {string}  props.nextText      - Titletext for Next
  @param {string}  props.jumpText      - Titletext for Jump
#}
{% macro pagination(pages,craft,props) %}
  {% set defaults = {
    cn: 'm-pagination',
    searchquery: false,
    pagenumber: 5,
    fistPageSign: '&laquo;',
    lastPageSign: '&raquo;',
    prevSign: '&lsaquo;',
    nextSign: '&rsaquo;',
    firstPageText: 'First Page',
    lastPageText: 'Last Page',
    prevText: 'Prev Page',
    nextText: 'Next Page',
    jumpText: 'Jump to Page:'
  } %}

  {# Merge Default with Options #}
  {% set props = props is defined ? defaults|merge(props) : defaults %}

  {# Add Pagination only if the Page Number is higher than 1#}
  {% if pages.totalPages > 1 %}
    <nav class="{{ props.cn }}" role="navigation">
      <div class="{{ props.cn ~ '__inner' }}">
        {# Dont display last page when on the first Page #}
        {% if pages.currentPage > 2 and pages.prevUrl %}
          <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--first' }}" href="{{ pages.firstUrl }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.firstPageText }}">{{ props.fistPageSign|raw }}</a>
        {% endif %}

        {# Display the Previous Link if available #}
        {% if pages.prevUrl %}
          <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--prev' }}" href="{{ pages.prevUrl }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.prevText }}">{{ props.prevSign|raw }}</a>
        {% endif %}

        {# With Pagenumber higher than zero the pagination will display pages #}
        {% if props.pagenumber > 0 %}
          {# Display prev 5 Page Links#}
          {% for page, url in pages.getPrevUrls(props.pagenumber) %}
            <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--number' }}" href="{{ url }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.jumpText }} {{ page }}">{{ page }}</a>
          {% endfor %}

          {# Diplay Current Page#}
          <span class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--current' }}">{{ pages.currentPage }}</span>

          {# Display next 5 Page Links #}
          {% for page, url in pages.getNextUrls(props.pagenumber) %}
            <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--number' }}" href="{{ url }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.jumpText }} {{ page }}">{{ page }}</a>
          {% endfor %}
        {% endif %}

        {# Display next Page Link if available#}
        {% if pages.nextUrl %}
          <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--next' }}" href="{{ pages.nextUrl }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.nextText }}">{{ props.nextSign|raw }}</a>
        {% endif %}

        {# Dont display when on the last page #}
        {% if (pages.totalPages - 1) > pages.currentPage and pages.totalPages > 2 %}
          <a class="{{ props.cn ~ '__link' }}  {{ props.cn ~ '__link--last' }}" href="{{ pages.lastUrl }}{{ props.searchquery ? '?q='~props.searchquery }}" title="{{ props.lastPageText }}">{{ props.lastPageSign|raw }}</a>
        {% endif %}
      </div>
    </nav>
  {% endif %}
{% endmacro %}
