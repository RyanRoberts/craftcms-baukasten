{#
  settings
  ========

  {{ module.settings(props) }}
#}
{% macro settings(props, twClasses) %}
  {# Set module class #}
  {% if props.cn %} class="{{ props.cn }}  {{ twClasses }}  {# Set modfier classes #}{% if props.modifiers ??? null %}{% for modifier in props.modifiers %}{{ modifier | length ? '  ' ~ props.cn ~ '--' ~ modifier }}{% endfor %}{% endif %}{# Set custom classes #}{% if props.customClasses ??? null %}{% for customClass in props.customClasses %}{{ customClass | length ? '  ' ~ customClass }}{% endfor %}
  {% endif %}{# JS Class#}{% if props.js ??? null %}{{ props.cn|replace({ (props.cn | slice(0,2)) : ' js-' }) }}{% endif %}"
  {% endif %}
  {# Set data attributes #}
  {% if props.data ??? null %}
    {% for key, value in props.data %}  {{ key }}="{{ value }}" {% endfor %}
  {% endif %}
{% endmacro %}
