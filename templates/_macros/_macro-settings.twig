{#
  settings
  ========

  {{ module.settings(opt) }}
#}
{% macro settings(opt) %}
  {# Set module class #}
  {% if opt.cn %} class="{{ opt.cn }}{# Set modfier classes #}{% if opt.modifiers ??? null %}{% for modifier in opt.modifiers %}{{ modifier | length ? '  ' ~ opt.cn ~ '--' ~ modifier }}{% endfor %}{% endif %}{# Set variant #}{% if opt.variant ??? null %}{{ '  ' ~ 'variant-' ~ opt.variant }}{% endif %}{# Set custom classes #}{% if opt.customClasses ??? null %}{% for customClass in opt.customClasses %}{{ customClass | length ? '  ' ~ customClass }}{% endfor %}
    {% endif %}{# JS Class#}{% if opt.js ??? null %}{{ opt.cn|replace({ (opt.cn | slice(0,2)) : 'js-' }) }}{% endif %}"
  {% endif %}
  {# Set data attributes #}
  {% if opt.data ??? null %}
    {% for key, value in opt.data %}{{ '  ' ~ key ~ '=' ~ value }} {% endfor %}
  {% endif %}
{% endmacro %}
