{#
 # Slugify
 #
 # Macros for getting and setting cookies natively with Craft CMS 3.1.17 or later
 #
 # Usage:
 # {% import "_macros/_macro-slugify.twig" as slugify %}
 # {{ slugify.slugify(string, lang, ending) }}
 #}

{%- macro slugify(string, lang = 'de') -%}
  {% apply spaceless %}
    {% set stringy = create(
      "Stringy\\Stringy",
      [string]
    ) %}
    {{ stringy.toAscii(lang).slugify() }}
  {% endapply %}
{%- endmacro -%}


