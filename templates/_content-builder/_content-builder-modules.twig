{# Content Builder Modules #}
{# Loop over all block and choose the right one #}
{# data has all the block data included #}

{% switch data.type %}
  {# Accordion #}
{% case 'accordion' %}
  {% include '_content-builder/_includes/_cb-accordion.twig' with {
    data: data
  } only %}

  {# Section #}
{% case 'bkSection' %}
  {% include '_content-builder/_includes/_cb-bksection.twig' with {
