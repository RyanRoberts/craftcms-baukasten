{# Set Defaults #}
{% set defaults = {
  cn: 'm-gridOverlay',
  modifiers: [],
  customClasses: ['section'],
  data: {},
  cols: 24,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Modul #}
{% if opt.cols %}
  {# Include Variant #}
  {% include [
    '_molecules/gridOverlay/variant-' ~ opt.variant ~ '/_template.twig',
  ] %}
{% endif %}

