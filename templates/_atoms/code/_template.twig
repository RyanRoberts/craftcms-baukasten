{#
  a-code
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-code',
  modifiers: [],
  customClasses: ['js-code'],
  data: {},
  open: true,
  textShow: 'Expand Code Block',
  textHide: 'Collapse Code Block',
  snippet: null,
  language: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.snippet %}
  {# Include Variant #}
  {% include [
    '_atoms/code/_variant-' ~ opt.variant ~ '.twig',
    '_atoms/code/_variant-basic.twig'
    ] %}
{% endif %}
