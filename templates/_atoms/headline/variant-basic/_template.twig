{#
  a-headline
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-headline',
  modifiers: [],
  customClasses: [],
  data: {},
  text: null,
  size: 'h2',
  animate: true,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Merge Animate Class #}
{% if opt.animate %}
  {% set opt = opt | merge({  customClasses: opt.customClasses | merge(['is-fadeInUp'])}) %}
{% endif %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if opt.text %}
  {# Include Variant #}
  <{{ opt.size }} {{ module.settings(opt) }}  {{opt.animate ? 'waypoint' : ''}}>
    {{ opt.text }}
  </{{ opt.size }}>
{% endif %}
