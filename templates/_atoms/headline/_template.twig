{#
  a-headline
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-headline',
  modifiers: [],
  customClasses: [],
  data: {},
  text: null,
  size: 'h2'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Merge Animate Class #}
{#{% set opt = opt | merge({  customClasses: opt.customClasses | merge(['is-fadeInUp'])}) %}#}

{# Macros #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.text %}
  {# Include Variant #}
  {% include [
    '_atoms/image/' ~ opt.variant ~ '/_template.twig',
  ] %}
  <{{ opt.size }} {{ module.settings(opt) }}  waypointTrigger>
    {{ opt.text }}
  </{{ opt.size }}>
{% endif %}
