{# Set Defaults #}
{% set defaults = {
  cn: 'a-headline',
  modifiers: [],
  customClasses: [],
  data: {},
  text: null,
  size: 'h2',
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Merge Animate Class #}
{#{% set opt = opt | merge({  customClasses: opt.customClasses | merge(['is-fadeInUp'])}) %}#}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.text %}
  {# Include Variant #}
{% include '_atoms/logo/variant-' ~ opt.variant | default('basic') ~ '/_template.twig' with {
  opt: opt ??? null
} only %}
  <{{ opt.size }} {{ module.settings(opt) }}  waypointTrigger>
    {{ opt.text }}
  </{{ opt.size }}>
{% endif %}
