{# Set Defaults #}
{% set defaults = {
  cn: 'a-image',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  image: null,
  sizes: [
    { width: 1600 },
    { width: 800 },
    { width: 400 },
    { width: 200 },
    { width: 100 }
  ],
  ratio: null,
  dominantColor: true,
  objectFit: null,
  mode: 'crop',
  lazy: true,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{#  Raw #}
{% set placeholder = craft.assets.title('Placeholder').volume('templateImages').one() %}
{% if opt.image ??? placeholder ??? null %}
  {# Logic Part #}
  {% include '_atoms/image/_partial-logic.twig' %}

  {% if opt.image.extension not in skipTransformsForThisExtensions %}
    {# Transforming #}
    {% include '_atoms/image/variant-_partial-transforming.twig' %}
  {% else %}
    {# No Transforming #}
    {% include '_atoms/image/variant-_partial-no-transforming.twig' %}
  {% endif %}
  <noscript><img src="{{ opt.image.getUrl() }}" alt="{{ opt.image.title }}"></noscript>
{% endif %}
