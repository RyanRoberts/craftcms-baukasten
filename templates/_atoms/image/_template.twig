{#  Set Defaults #}
{% set defaults = {
  cn: 'a-image',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  image: null,
  sizes: [
    { width: 1600 },
    { width: 800 },
    { width: 400 },
    { width: 200 },
    { width: 100 }
  ],
  ratio: null,
  dominantColor: true,
  objectFit: null,
  quality: 80,
  mode: 'crop',
  lazy: true,
  variant: 'image'
} %}

{#  Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{#  Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{#  Modul #}
{% if opt.image %}
  {# Logic Part #}
  {% include '_atoms/image/_partial-logic.twig' %}

  {# Include Variant #}
  {% include [
    '_atoms/image/_variant-' ~ opt.variant ~ '.twig',
    '_atoms/image/_variant-picture.twig'
  ] %}
{% endif %}
