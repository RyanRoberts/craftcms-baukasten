{# Set Defaults #}
{% set defaults = {
  cn: 'a-image',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  image: null,
  sizes: [
    { width: 1600 },
    { width: 800 },
    { width: 400 },
    { width: 200 },
    { width: 100 }
  ],
  ratio: null,
  dominantColor: true,
  objectFit: null,
  mode: 'crop',
  lazy: true,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Modul #}
{% if opt.image %}
  {# Logic Part #}
  {% include '_atoms/image/variant-_partial-logic.twig' %}

  {# Include Variant #}
{% include '_atoms/logo/variant-' ~ opt.variant | default('basic') ~ '/_template.twig' with {
  opt: opt ??? null
} only %}
{% endif %}
