{#
  a-plainText
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-plainText',
  modifiers: [],
  customClasses: [],
  data: {},
  text: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.text %}
  {# Include Variant #}
{% include '_atoms/logo/variant-' ~ opt.variant | default('basic') ~ '/_template.twig' with {
  opt: opt ??? null
} only %}
  <p {{ module.settings(opt) }}>
    {{ opt.text | nl2br | raw }}
  </p>
{% endif %}
