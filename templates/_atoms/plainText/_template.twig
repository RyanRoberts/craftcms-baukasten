{#
  a-plainText
  ------------------------------------------------------------
#}

{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'a-plainText',
  modifiers: [],
  customClasses: [],
  data: {},
  vSpace: null,
  text: null
} %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# -- Macros -- #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{# -- Modul -- #}
{% if opt.text %}
  <p {{ module.settings(opt) }}>
    {{ opt.text | nl2br | raw }}
  </p>
{% endif %}
