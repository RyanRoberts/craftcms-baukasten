{#
  a-embed
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-embed',
  modifiers: [],
  customClasses: [],
  data: {},
  code: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.code %}
  {# Logic Part #}
  {% include '_atoms/embed/_partial-logic.twig' %}

  {# Include Variant #}
{% include '_atoms/logo/variant-' ~ opt.variant | default('basic') ~ '/_template.twig' with {
  opt: opt ??? null
} only %}
{% endif %}
