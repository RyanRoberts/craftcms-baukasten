{#
  a-embed
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-embed',
  modifiers: [],
  customClasses: [],
  data: {},
  vSpace: null,
  code: null,
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{# Modul #}
{% if opt.code %}
  {# Logic Part #}
  {% include '_atoms/embed/_partial-logic.twig' %}

  {# Include Variant #}
  {% include [
    '_atoms/embed/_variant-' ~ opt.variant ~ '.twig',
    '_atoms/embed/_variant-basic.twig'
    ] %}
{% endif %}
