{# Set Defaults #}
{% set defaults = {
  cn: 'a-logo',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  url: null,
  name: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if opt.name %}
  <div {{ module.settings(opt) }}>
    {% if opt.url %}
    <a class="{{ opt.cn ~ '__link' }}" href="{{ opt.url }}">
      {% endif %}

      {{ svg('@webroot/dist/img/svg/logo.svg') }}

      {% if opt.url %}
    </a>
    {% endif %}
  </div>
{% endif %}


