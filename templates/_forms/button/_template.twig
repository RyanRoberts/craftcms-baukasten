{#  Set Defaults #}
{% set defaults = {
  cn: 'a-button',
  modifiers: [],
  customClasses: [],
  data: {},
  vSpace: null,
  text: null,
  icon: null,
  for: null,
  type: null,
  disabled: null
} %}

{#  Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{#  Macros #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{#  Modul #}
{% if opt.text %}
  <button {{ module.settings(opt) }}  {% if opt.type %}
    type="{{ opt.type }}"
  {% endif %} {% if opt.for %}
    for="{{ opt.for }}"
  {% endif %}
    {{ opt.disabled ? 'disabled' }}>
    {% if opt.icon %}
      {#  Link Text #}
      <span class="{{ opt.cn ~ '__text' }}">{{ opt.text }}</span>

      {#  Icon #}
      {% include '_atoms/svgIcon/_template.twig' with {
        opt: {
          icon: opt.icon
        }
      } only %}
    {% else %}
      {{ opt.text }}
    {% endif %}
  </button>
{% endif %}


