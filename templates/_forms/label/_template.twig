{#
  a-label
  ------------------------------------------------------------
#}

{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'a-label',
  modifiers: [],
  customClasses: [],
  data: {},
  vSpace: null,
  for: null,
  element: 'label',
  text: null
} %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# -- Macros -- #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{# -- Modul -- #}
{% if opt.text %}
  <{{ opt.element }} {{ module.settings(opt) }} {{ opt.for ? 'for=' ~ opt.for : '' }}>
    {{ opt.text | raw }}
  </{{ opt.element }}>
{% endif %}
