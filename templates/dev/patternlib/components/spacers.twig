{% extends "_layouts/patternlib-page-layout.twig" %}
{% set pageTitleSuffix = _self | split('/') | last | capitalize %}

{% block content %}
  {% cache using key craft.app.request.pathInfo %}
  <div class="{{ config.styles.compItem }}">
    <label class="{{ config.styles.compLabel }}">Spacer</label>
    <div class="{{ config.styles.compItemVariant }}">
      {# -- Spacer -- #}
      {% include '_components/_layout/spacer/spacer.twig' with {
        props: {
          size: 'h-2',
          visible: 1
        }
      } only %}
    </div>
    <div class="{{ config.styles.compItemVariant }}">
      {# -- Spacer -- #}
      {% include '_components/_layout/spacer/spacer.twig' with {
        props: {
          size: 'h-4',
          visible: 1
        }
      } only %}
    </div>
    <div class="{{ config.styles.compItemVariant }}">
      {# -- Spacer -- #}
      {% include '_components/_layout/spacer/spacer.twig' with {
        props: {
          size: 'h-8',
          visible: 1
        }
      } only %}
    </div>
    <div class="{{ config.styles.compItemVariant }}">
      {# -- Spacer -- #}
      {% include '_components/_layout/spacer/spacer.twig' with {
        props: {
          size: 'h-16',
          visible: 1
        }
      } only %}
    </div>
  </div>
  {% endcache %}
{% endblock %}


