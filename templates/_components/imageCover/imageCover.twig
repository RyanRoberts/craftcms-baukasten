{# Set Defaults #}
{% set defaults = {
  cn: 'o-imageCover',
  modifiers: [],
  customClasses: [],
  twClassSet: null,
  data: {},
  image: null,
  ratio: null,
  text: null,
  objectFit: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Tailwind Magic #}
{% switch props.twClassSet %}
{% case "caseA" %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss:  #}

{% default %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss: custuom classes here as string #}
{% endswitch %}

{# Modul #}
{% if props.image %}
  <div {{ module.settings(props, twClasses.root) }} waypointTrigger>
    {% include '_molecules/figure/_template.twig' with {
      props: {
        customClasses: ['is-fadeInUp'],
        data: {
          'waypoint': ''
        },
        image: props.image ?? null,
        ratio: props.ratio ?? null,
        objectFit: props.objectFit ?? 'cover'
      }
    } only %}

    {# Text #}
    {% if props.text %}
      <div class="{{ props.cn ~ '__text' }} is-fadeInUp" waypoint>
        {{ props.text }}
      </div>
    {% endif %}
  </div>
{% endif %}
