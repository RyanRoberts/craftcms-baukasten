{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'a-youtube-basic',
  theme: getenv('BAUKASTEN_THEME') | default(null),
  variant: 'default',
  modifiers: [],
  customClasses: [],
  data: {}
  videoId: null,
  autoplay: 0,
  loop: 0,
  showinfo: 0,
} %}

{# -- Merge Default with Options -- #}
{% set props = props is defined ? defaults|merge(props) : defaults %}
{% set props= props| merge({
  customClasses: props.customClasses | merge([
    'o-ratio',
    'o-ratio--16-9',
  ])
}) %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Baukasten:Minimal #}
{% if props.theme %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Custom Styling #}
{% if not props.theme %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# GDPR Ready Youtube Embeds#}
{% set klaro = getCookie('klaro') | json_decode %}
{% set craftEnv = craft.app.config.env != 'live' ? true : false %}
{% if klaro.youtube ??? craftEnv ??? null %}
  {% if props.videoId %}
    <div {{ module.settings(props, twClasses.root) }}>
      <iframe class="lazyload"
              data-src="https://www.youtube-nocookie.com/embed/{{ props.videoId }}?rel=0&loop={{ props.loop }}&showinfo={{ props.showinfo }}&autoplay={{ props.autoplay }}"
              frameborder="0">
      </iframe>

      {% if not klaro.youtube ??? null %}
        {# -- cookieClue -- #}
        {% include '_atoms/cookieClue/_template.twig' with {
          props: {}
        } only %}
      {% endif %}
    </div>
  {% endif %}
{% endif %}

