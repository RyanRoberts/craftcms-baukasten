{# Set Defaults #}
{% set defaults = {
  cn: 'm-quote',
  theme: getenv('BAUKASTEN_THEME') | default(null),
  variant: 'default',
  modifiers: [],
  customClasses: [],
  data: {},
  quote: null,
  source: null,
  sourceUrl: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Baukasten:Minimal #}
{% if props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Custom Styling #}
{% if not props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Modul #}
{% if props.quote %}
  <div {{ module.settings(props, twClasses.root) }}>
    <div class="{{ props.cn ~ '__inner' }}">
      <blockquote class="{{ props.cn ~ '__blockquote' }}">
        <p>
          {{ '"' ~ props.quote ~ '"' | raw }}
        </p>
        {% if props.source %}
          <footer>
            <cite>
              {% if props.sourceUrl %}
              <a href="{{ props.sourceUrl }}" target="_blank">
                {% endif %}
                {{ props.source }}
                {% if props.sourceUrl %}
              </a>
              {% endif %}
            </cite>
          </footer>
        {% endif %}
      </blockquote>
    </div>
  </div>
{% endif %}
