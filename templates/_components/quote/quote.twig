{#
  c-quote
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'm-quote',
  modifiers: [],
  customClasses: [],
  data: {},
  quote: null,
  source: null,
  sourceUrl: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}





{# Modul #}
{% if props.quote %}
  <div {{ module.settings(props) }}>
    <div class="{{ props.cn ~ '__inner' }}">
      <blockquote class="{{ props.cn ~ '__blockquote' }} u-stack">
        <p>
          {{ '"' ~ props.quote ~ '"' | raw }}
        </p>
        {% if props.source %}
          <footer>
            {{ props.quoter| raw }}
          </footer>
        {% endif %}
      </blockquote>
    </div>
  </div>
{% endif %}
