{#
  Accordion
  =========
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'c-accordion',

  data: {},
  trigger: null,
  content: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-componentSettings.twig' as macroComponentSettings %}

{# Modul #}
{% if props.trigger and props.content %}
  <div {{ macroComponentSettings.componentSettings(props) }}>
    <div class="{{ props.cn ~ '__trigger' }} js-accordionTrigger">
      {{ props.trigger }}
      <span class="{{ props.cn ~ '__indicator' }}"></span>
    </div>
    <div class="{{ props.cn ~ '__content' }}">
      {{ props.content | raw }}
    </div>
  </div>
{% endif %}

