{#
  o-section
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'o-section',
  modifiers: [],
  customClasses: ['section'],
  closetags: true,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Modul #}
{# Include Variant #}
<section {{ module.settings(opt) }}>
  <div class="container">
    {% block sectionContent %}{% endblock %}
    {% if opt.closetags %}
  </div>
</section>
{% endif %}
