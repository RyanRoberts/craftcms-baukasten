{#
  a-icon
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-icon',
  modifiers: [],
  customClasses: [],
  data: {},
  icon: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if opt.icon %}
  <span {{ module.settings(opt) }}>
    {{ svg('@webroot/dist/img/svg/' ~ opt.icon ~ '.svg') }}
  </span>
{% endif %}
