{#
  a-icon
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-icon',
  modifiers: [],
  customClasses: [],
  twClassSet: null,
  data: {},
  icon: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Tailwind Magic #}
{% switch props.twClassSet %}
{% case "caseA" %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss:  #}

{% default %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss: custuom classes here as string #}
{% endswitch %}

{% if props.icon %}
  <span {{ module.settings(props, twClasses.root) }}>
    {{ svg('@webroot/dist/img/svg/' ~ props.icon ~ '.svg') }}
  </span>
{% endif %}
