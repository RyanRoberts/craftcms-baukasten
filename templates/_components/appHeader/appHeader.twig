{# Set Defaults #}
{% set defaults = {
  cn: 'o-appHeader',
  theme: getenv('BAUKASTEN_THEME') | default(null),
  variant: 'default',
  modifiers: [],
  customClasses: [],
  data: {}
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Baukasten:Minimal #}
{% if props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Custom Styling #}
{% if not props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

<header {{ module.settings(props, twClasses.root) }}>
  <div class="container py-2">
    <div class="flex items-center">
      {# -- logo -- #}
      {% include '_components/logo/logo.twig' with {
        props: {
          customClasses: [
            'w-96px h-96px'
          ],
          name: 'logo'
        }
      } only %}
      <h2 class="ms-3 px-1">Craft 3 Baukasten Sample</h2>
    </div>
  </div>
</header>
