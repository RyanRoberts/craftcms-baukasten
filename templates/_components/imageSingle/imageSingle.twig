{# Set Defaults #}
{% set defaults = {
  cn: 'o-imageSingle',
  modifiers: [],
  customClasses: [],
  twClassSet: null,
  data: {},
  image: null,
  caption: null,
  ratio: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Tailwind Magic #}
{% switch props.twClassSet %}
{% case "caseA" %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss:  #}

{% default %}
  {% set twClasses = {
    root: ''
  } %}
  {# purgecss: custuom classes here as string #}
{% endswitch %}

{# Modul #}
{% if props.image %}
  <div {{ module.settings(props, twClasses.root) }}>
    {% include '_molecules/figure/_template.twig' with {
      props: {
        image: props.image ?? null,
        ratio: props.ratio ?? null,
        caption: props.caption ?? null,
        captionHeadline: props.image.imageTitle ?? null,
        captionText: props.image.imageCaption ?? null,
        captionSource: props.image.imageSource ?? null,
        captionSourceUrl: props.image.imageSourceUrl ?? null
      }
    } only %}
  </div>
{% endif %}
