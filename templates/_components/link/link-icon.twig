{#
  a-link
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-link',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  url: null,
  targetBlank: null,
  text: null,
  icon: null,
  variant: 'icon'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if opt.text and opt.url and opt.icon %}
  <a
    href="{{ opt.url }}" {{ opt.url starts with '#' ? 'data-scroll' : '' }}  {{ module.settings(opt) }} {{ opt.targetBlank ? 'target="_blank"' }}>

    {# Icon #}
    {% include '_atoms/icon/_template.twig' with {
      opt: {
        variant: 'basic',
        icon: opt.icon
      }
    } only %}

    {# Link Text #}
    <span class="{{ opt.cn ~ '__text' }}">
      {{ opt.text }}
    </span>
  </a>
{% endif %}
