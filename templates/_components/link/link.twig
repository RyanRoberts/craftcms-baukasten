{#
  a-link
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'a-link',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  url: null,
  targetBlank: null,
  text: null,
  variant: 'basic'
} %}

{# Merge Default with Options #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{% if opt.text and opt.url %}
  <a href="{{ opt.url }}" {{ opt.url starts with '#' ? 'data-scroll' : '' }}  {{ module.settings(opt) }} {{ opt.targetBlank ? 'target="_blank"' }}>
    {{ opt.text }}
  </a>
{% endif %}
