{#
  l-section
  ------------------------------------------------------------
#}

{# -- Set Defaults -- #}
{% set defaults = {
  cn: 'l-section',
  modifiers: [],
  customClasses: [],
  closetags: true,
  containerWidth: 'max'
} %}

{# -- Merge Default with Options -- #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# -- Macros -- #}
{% import '_macros/_macro-settings.twig' as module %}

{# -- Modul -- #}
<section {{ module.settings(props) }}>
  <div class="l-container l-container--{{ props.containerWidth }}">
    {% block sectionContent %}{% endblock %}
  </div>
  {% if props.closetags %}
</section>
{% endif %}
