{# Set Defaults #}
{% set defaults = {
  cn: 'a-image',
  theme: getenv('BAUKASTEN_THEME') | default(null),
  variant: 'default',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  image: null,
  sizes: [
    { width: 1600 },
    { width: 800 },
    { width: 400 },
    { width: 200 },
    { width: 100 }
  ],
  ratio: null,
  dominantColor: true,
  objectFit: null,
  mode: 'crop',
  lazy: true
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Baukasten:Minimal #}
{% if props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Custom Styling #}
{% if not props.theme == 'Baukasten:Minimal' %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Image #}
{% if props.image ??? null %}
  {% set image = props.image %}
{% endif %}

{% if image ??? null %}
  {# Skip Transforms for the current filetypes #}
  {% set skipTransformsForThisExtensions = ['gif', 'GIF', 'tiff', 'TIFF', 'svg', 'SVG'] %}
  {% set focalpoint = image.getFocalpoint('asCss') %}

  {% if image is iterable %}
    {% set extension = image.extension %}
  {% else %}
    {% set extension = image | split('.') | last %}
  {% endif %}

  {% if image.extension not in skipTransformsForThisExtensions %}
    {# Set correct ratio #}
    {% if props.ratio %}
      {% switch props.ratio %}

      {% case "landscape" %}
        {% set ratio = 4/3 %}

      {% case "square" %}
        {% set ratio = 1/1 %}

      {% case "portrait" %}
        {% set ratio = 3/4 %}

      {% case "auto" %}
        {% set ratio = image.width/image.height %}

      {% default %}
        {% set ratio = props.ratio %}
      {% endswitch %}
    {% else %}
      {% set ratio = image.width/image.height %}
    {% endif %}

    {# Define global variables #}
    {% set imageSettings = {
      mode: props.mode,
      position: focalpoint,
      ratio: ratio
    } %}

    {# Final Image Set #}
    {% set transformedImages = craft.imager.transformImage(image, props.sizes, imageSettings) %}

    {# Domiant Color (Use lase image from Final images #}
    {% set dominantColor = craft.imager.getDominantColor(transformedImages|last) %}

    {# Placeholder #}
    {% set placeholderImage = craft.imager.placeholder({
      type: 'svg',
      color: dominantColor,
      width: image.width,
      height: image.width / ratio
    }) %}
  {% endif %}

  {% if props.dominantColor starts with '#' %}
    {% set dominantColor = props.dominantColor %}
  {% endif %}

  {% if image.extension == 'png' or image.extension == 'gif' or image.extension == 'svg' %}
    {% set dominantColor = false %}
  {% endif %}

  {% if image.extension not in skipTransformsForThisExtensions %}
    {# Transforming #}
    {% include '_components/image/_transforming.twig' %}
  {% else %}
    {# No Transforming #}
    {% include '_components/image/_no-transforming.twig' %}
  {% endif %}
  <noscript><img src="{{ image.getUrl() }}" alt="{{ image.title }}"></noscript>
{% endif %}
