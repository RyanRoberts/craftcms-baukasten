<img class="{{ props.lazy ? 'lazyload' : '' }}" {#loading="lazy"#}
  {% if props.objectFit %}
    data-object-fit="{{ props.objectFit }}"
    data-object-position="{{ image.getFocalpoint('asCss') | default('50% 50%') }}"
  {% endif %}
  {% if props.lazy %}
    src="{{ placeholderImage }}"
    data-src="{{ image.getUrl() }}"
    data-sizes="auto"
  {% else %}
    src="{{ image.getUrl() }}"
    sizes="100vw"
  {% endif %}
     alt="{{ image.title }}"/>

