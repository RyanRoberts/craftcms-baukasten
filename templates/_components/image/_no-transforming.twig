<img class="{{ props.lazy ? 'lazyload' : '' }}" loading="lazy"
  {% if props.objectFit %}
    style="object-fit: {{ props.objectFit }}; object-position: {{ focalpoint }};"
  {% endif %}
  {% if props.lazy %}
    src="{{ placeholderImage }}"
    data-src="{{ image.getUrl() }}"
    data-sizes="auto"
  {% else %}
    src="{{ image.getUrl() }}"
    sizes="100vw"
  {% endif %}
     alt="{{ image.title }}"/>

