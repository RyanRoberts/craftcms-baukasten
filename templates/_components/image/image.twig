{# Set Defaults #}
{% set defaults = {
  cn: 'c-image',
  modifiers: [],
  customClasses: [],
  data: {},
  js: null,
  image: null,
  sizes: [
    { width: 1600 },
    { width: 800 },
    { width: 400 },
    { width: 200 },
    { width: 100 }
  ],
  ratio: null,
  dominantColor: true,
  objectFit: null,
  mode: 'crop',
  lazy: true
} %}


{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Image #}
{% if props.image ??? null %}
  {% set image = props.image %}
{% endif %}

{% if image ??? null %}
  {# Skip Transforms for the current filetypes #}
  {% set skipTransformsForThisExtensions = ['gif', 'GIF', 'tiff', 'TIFF', 'svg', 'SVG'] %}
  {% set focalpoint = image.getFocalpoint('asCss') | default('50% 50%') %}

  {% if image is iterable %}
    {% set extension = image.extension %}
  {% else %}
    {% set extension = image | split('.') | last %}
  {% endif %}

  {% if extension not in skipTransformsForThisExtensions %}
    {# Set correct ratio #}
    {% if props.ratio %}
      {% switch props.ratio %}

      {% case "landscape" %}
        {% set ratio = 4/3 %}

      {% case "square" %}
        {% set ratio = 1/1 %}

      {% case "portrait" %}
        {% set ratio = 3/4 %}

      {% case "auto" %}
        {% set ratio = (image.width/image.height) | default(null) %}

      {% default %}
        {% set ratio = props.ratio %}
      {% endswitch %}
    {% else %}
      {% set ratio = (image.width/image.height) | default(null) %}
    {% endif %}

    {# Define global variables #}
    {% set imageSettings = {
      mode: props.mode,
      position: focalpoint,
      ratio: ratio
    } %}

    {# Final Image Set #}
    {% set transformedImages = craft.imager.transformImage(image, props.sizes, imageSettings) %}

    {# If the server has support for WebP, create transforms #}
    {% if craft.imager.serverSupportsWebp() %}
      {% set imageSettingsWebp = {
        mode: props.mode,
        position: focalpoint,
        ratio: ratio,
        format: 'webp'
      } %}

      {% set transformedImagesWebp = craft.imager.transformImage(image, props.sizes, imageSettingsWebp) %}
    {% endif %}

    {# Domiant Color (Use lase image from Final images #}
    {% if craft.imager.getDominantColor(transformedImages|last) %}
      {% set dominantColor = craft.imager.getDominantColor((transformedImages|last).url, 10) %}
    {% else %}
      {% set dominantColor = 'transparent' %}
    {% endif %}

    {# Placeholder #}
    {% set placeholderImage = craft.imager.placeholder({
      type: 'svg',
      color: dominantColor,
      width: image.width,
      height: image.width / ratio
    }) %}
  {% endif %}

  {% if props.dominantColor starts with '#' %}
    {% set dominantColor = props.dominantColor %}
  {% endif %}

  {% if image.extension == 'png' or image.extension == 'gif' or image.extension == 'svg' %}
    {% set dominantColor = false %}
  {% endif %}

  <picture {{ module.settings(props) }} {% if props.dominantColor %}style="{{ 'background-color: ' ~ dominantColor ?? 'transparent' }}"{% endif %}>
    {% if image.extension not in skipTransformsForThisExtensions %}
      {# Transforming #}
      {% if craft.imager.serverSupportsWebp() %}
        <source data-sizes="auto"
                data-srcset="{{ craft.imager.srcset(transformedImagesWebp) }}"
                type="image/webp">
      {% endif %}
      {% include '_components/image/_transforming.twig' %}
    {% else %}
      {# No Transforming #}
      {% include '_components/image/_no-transforming.twig' %}
    {% endif %}
    <noscript><img src="{{ image.getUrl() }}" alt="{{ image.title }}"></noscript>
  </picture>
{% endif %}
