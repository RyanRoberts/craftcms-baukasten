<img class="{{ props.lazy ? 'lazyload' : '' }}" loading="lazy"
{% if props.objectFit %}
  style="object-fit: {{ props.objectFit }}; object-position: {{ focalpoint }};"
{% endif %}
    src="{{ placeholderImage }}"
{% if props.lazy %}
  data-srcset="{{ craft.imager.srcset(transformedImages) }}"
  data-sizes="auto"
{% else %}
  srcset="{{ craft.imager.srcset(transformedImages) }}"
  sizes="100vw"
{% endif %}
    alt="{{ image.title }}"
    data-rootimage="{{ transformedImages|first.url }}"/>
