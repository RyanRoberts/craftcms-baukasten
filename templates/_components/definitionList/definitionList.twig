{# Set Defaults #}
{% set defaults = {
  cn: 'm-definitionList',
  theme: getenv('BAUKASTEN_THEME') | default(null),
  variant: 'default',
  modifiers: [],
  customClasses: [],
  data: {},
  items: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-settings.twig' as module %}

{# Baukasten:Minimal #}
{% if props.theme %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Custom Styling #}
{% if not props.theme %}
  {% switch props.variant %}
  {% case 'default' %}
    {% set twClasses = {
      root: ''
    } %}
  {% endswitch %}
{% endif %}

{# Modul #}
{% if props.items %}
  <dl {{ module.settings(props, twClasses.root) }} waypointTrigger>
    <div class="{{ props.cn ~ '__inner' }}">
      {% for item in props.items %}
        <dt class="{{ props.cn ~ '__term' }}  is-fadeInUp" waypoint>
          {{ item.term | raw }}
        </dt>
        <dd class="{{ props.cn ~ '__description' }}  is-fadeInUp"  waypoint>
          <p>{{ item.description | nl2br }}</p>
        </dd>
      {% endfor %}
    </div>
  </dl>
{% endif %}
