{#
  c-coverVideo
  ------------------------------------------------------------
#}

{# Set Defaults #}
{% set defaults = {
  cn: 'c-coverVideo',

  data: {},
  image: null,
  transform: null,
  objectFit: null
} %}

{# Merge Default with Options #}
{% set props = props is defined ? defaults|merge(props) : defaults %}

{# Macros #}
{% import '_macros/_macro-componentSettings.twig' as macroComponentSettings %}

{# Modul #}
{% if props.image %}
  <div {{ macroComponentSettings.componentSettings(props) }}>
    {% include '_components/image/picture.twig' with {
      props: {
        image: props.image ??? null,
        transform: props.transform ??? null,
        objectFit: props.objectFit ??? 'cover'
      }
    } only %}
  </div>
{% endif %}
