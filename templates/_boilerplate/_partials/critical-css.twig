{# Critical CSS #}
{% set criticalCss = getCookie('critical-css') %}
{% if criticalCss == 'loaded' %}

  {{ craft.twigpack.includeCssModule("styles.css", false) }}
{% else %}
  {% do setCookie('critical-css', 'loaded', now | date_modify("+7 days").timestamp ) %}

  {% if craft.app.config.general.custom.craftEnv == 'live' %}
    {{ craft.twigpack.includeCriticalCssTags() }}
  {% endif %}

  {{ craft.twigpack.includeCssModule("styles.css", true) }}
{% endif %}
