{#
  Description of what this file is for

  @package <%= projectName %>
<% for (var i=0; i < authors.length; i++) { -%>
  @author <%= authors[i].name %> [<%= authors[i].email %>]
<% } -%>

  <%= pathOptions.key.charAt(0) %>-<%= moduleName.replace('-', '_') %>
  ------------------------------------------------------------
#}

{# -- Set Defaults -- #}
{% set defaults = {
  cn: '<%= pathOptions.key.charAt(0) %>-<%= moduleName.replace('-', '_') %>',
  modifiers: [],
  customClasses: [],
  data: {},
  vSpace: null,
  variant: 'basic',
  foo: null
} %}

{# -- Merge Default with Options -- #}
{% set opt = opt is defined ? defaults|merge(opt) : defaults %}

{# -- Macros -- #}
{% import '_partials/macros/_macro-settings.twig' as module %}

{# -- Modul -- #}
{% if opt.foo %}
  {# Include Variant #}
  {% include [
    '_<%= pathOptions.key %>/<%= moduleName %>/' ~ opt.variant ~ '/_template.twig',
    ] %}
{% endif %}
