/*
 * Ratios
 */

.o-ratio {
  position: relative;
  display: block;
  overflow: hidden;

  &::before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 100%;
  }
}


.o-ratio__content,
.o-ratio > iframe,
.o-ratio > embed,
.o-ratio > object {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.o-ratio--2-1 {
  padding-bottom: calc(1 / 2 * 100%);
}

.o-ratio--3-1 {
  padding-bottom: calc(1 / 3 * 100%);
}

.o-ratio--3-2 {
  padding-bottom: calc(2 / 3 * 100%);
}

.o-ratio--4-3 {
  padding-bottom: calc(3 / 4 * 100%);
}

.o-ratio--16-9 {
  padding-bottom: calc(9 / 16 * 100%);
}

.o-ratio--16-10 {
  padding-bottom: calc(10 / 16 * 100%);
}

.o-ratio--1-1 {
  padding-bottom: calc(1 / 1 * 100%);
}

.o-ratio--1-2 {
  padding-bottom: calc(1 / 2 * 100%);
}

.o-ratio--1-3 {
  padding-bottom: calc(1 / 3 * 100%);
}

.o-ratio--2-3 {
  padding-bottom: calc(2 / 3 * 100%);
}

.o-ratio--3-4 {
  padding-bottom: calc(4 / 3 * 100%);
}

.o-ratio--9-16 {
  padding-bottom: calc(16 / 9 * 100%);
}

.o-ratio--10-16 {
  padding-bottom: calc(16 / 10 * 100%);
}
