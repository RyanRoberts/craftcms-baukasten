/*
 |--------------------------------------------------------------------------
 |  Social Networks
 |--------------------------------------------------------------------------
 */

.m-socialNetworks {
  $root: &;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;

  &__link {
    flex: 1 1 auto;
    display: inline-block;
    text-align: center;
    color: var(--c-gray-500);

    &:hover {
      color: var(--c-gray-500);

      #{$root}__icon {
        fill: var(--c-red);
      }
    }
  }

  &__icon {
    max-width: 24px;
    max-height: 24px;
    display: inline-block;
    fill: var(--c-blue);
    transition: fill 0.25s var(--ease-out-cubic);

    svg {
      max-width: 24px;
      max-height: 24px;
    }
  }

  &__label {
    width: 100%;
    color: inherit;
    @include ms-respond(font-size, -2);
  }
}
