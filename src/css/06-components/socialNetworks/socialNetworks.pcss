/*
 |--------------------------------------------------------------------------
 |  Social Networks
 |--------------------------------------------------------------------------
 */

.m-socialNetworks {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.m-socialNetworks__link {
  flex: 1 1 auto;
  display: inline-block;
  text-align: center;
  color: var(--c-gray-500);
}

.m-socialNetworks__link:hover {
  color: var(--c-gray-500);
}

.m-socialNetworks__icon {
  fill: var(--c-red);
}

.m-socialNetworks__icon {
  max-width: 24px;
  max-height: 24px;
  display: inline-block;
  fill: var(--c-blue);
  transition: fill 0.25s var(--ease-out-cubic);

  svg {
    max-width: 24px;
    max-height: 24px;
  }
}

.m-socialNetworks__label {
  width: 100%;
  color: inherit;
  // @include ms-respond(font-size, -2); TODO
}

