 */

.a-spinner-basic {
  position: absolute;
  width: 60px;
  height: 60px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  opacity: 1;

  .a-spinner__inner {
    width: 60px;
    height: 60px;

    &::before,
    &::after {
      content: '';
      position: absolute;
      display: inline-block;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--c-gray-500);
      animation: spin 1.6s var(--ease-in-quad) infinite;
    }

    &::after {
      animation-delay: 0.8s;
    }
  }


  @keyframes spin {
    from {
      transform: scale(0);
      opacity: 1;
    }

    to {
      transform: scale(1);
      opacity: 0;
    }
  }
}
