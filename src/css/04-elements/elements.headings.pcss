h1,
h2,
h3,
h4,
h5,
h6 {
  word-wrap: break-word;
  line-height: $base-line-height-headings;
  font-style: italic;
  font-weight: 900;
  @include wf('headline');
}

h1 {
  @apply ms-6--mobile;

  @include media('>=m') {
    @apply ms-6;
  }
}

h2 {
  @apply ms-5--mobile;

  @include media('>=m') {
    @apply ms-5;
  }
}

h3 {
  @apply ms-4--mobile;

  @include media('>=m') {
    @apply ms-4;
  }
}

h4 {
  @apply ms-3--mobile;

  @include media('>=m') {
    @apply ms-3;
  }
}

h5 {
  @apply ms-2--mobile;

  @include media('>=m') {
    @apply ms-2;
  }
}

h6 {
  @apply ms-1--mobile;

  @include media('>=m') {
    @apply ms-1;
  }
}
